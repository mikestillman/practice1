URL = http://www.math.uiuc.edu/Macaulay2/Downloads/OtherSourceCode/1.4
VERSION = 1.8.3
INSTALLOPTIONS = BINOWN=$(shell id -u) BINGRP=$(shell id -g)
ifeq (@SHARED@,no)
CONFIGOPTIONS += --disable-shared
endif
CHECKTARGET = .

# we do this to modernize the configure script, which is so old that it looks for an "install" program badly:
PRECONFIGURE = autoconf

include ../Makefile.library
Makefile: @srcdir@/Makefile.in ; cd ../.. && ./config.status libraries/gdbm/Makefile
uninstall clean::
	if [ -d $(LIBRARIESDIR) ] ; \
	then cd $(LIBRARIESDIR) && rm -rf include/gdbm.* info/gdbm.* lib/libgdbm.* man/man3/gdbm.* ;\
	fi
